# Global configuration

VPATH = src:src/scenes:src/scenes/title
OBJDIR = obj/$(TARGET)
BINDIR = bin/$(TARGET)
INCLUDE = -Isrc
OBJECTS = $(addprefix $(OBJDIR)/, \
	game.o		\
	main.o		\
	scene.o		\
	title_scene.o	\
	)

# #############################################################################
# Rules for building the project
# #############################################################################

$(PROJECT): prebuild $(OBJECTS)
	$(CC) $(LDFLAGS) -o $(BINDIR)/$(PROJECT) $(OBJECTS)
	$(APPMAKE)

$(OBJECTS): $(OBJDIR)/%.o : %.c
	$(CC) $(CFLAGS) $(INCLUDE) -c $< -o $@

prebuild:
	mkdir -p $(OBJDIR)
	mkdir -p $(BINDIR)

.PHONY: clean
clean:
	rm $(OBJECTS)

# EOF
