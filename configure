# Target platform. Can be zx or linux.
# If not specified, use linux by default.
target=linux

for arg in "$@"; do
    case "$arg" in
    --target=*)
        target=`echo $arg | sed 's/--target=//'`
        ;;

    --help)
        echo 'usage: ./configure [options]'
        echo 'options:'
        echo '  --target=zx|linux: target platform'
        echo '  --help: show this message'
        echo 'all invalid options are silently ignored'
        exit 0
        ;;
    esac
done

case "$target" in
    zx)
        echo "Platform: ZX Spectrum"
        ;;
    linux)
        echo "Platform: linux"
        ;;
    *)
        echo "Unrecognized target: $target"
        exit 0
        ;;
esac

# #############################################################################
# Generating resulting makefile
# #############################################################################

echo 'generating makefile ...'

echo "# This file is automatically generated by 'configure' script." >Makefile
cat build/license.in >>Makefile
echo "PROJECT=skazka" >>Makefile
echo "TARGET=$target" >>Makefile
cat build/$target/Makefile.in >>Makefile
cat build/Makefile.in >>Makefile

echo 'configuration complete, type make to build.'
exit 0

# EOF
